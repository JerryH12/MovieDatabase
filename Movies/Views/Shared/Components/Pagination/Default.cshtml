
    <ul class="pagination d-flex justify-content-center">

        @{
            if (ViewBag.Total != null)
            {
                int pageSize = 8;

                int length = (ViewBag.Total + pageSize - 1) / pageSize;

                for (int n = 0; n < length; n++)
                {
                    string active = "";
                    if (ViewBag.PageNumber == n)
                    {
                        active = "active";
                    }

                    <li class="page-item @active"><a class="page-link" asp-action="GetMoviesPerPage" asp-route-page="@n">@(n + 1)</a></li>
                }
            }
        }

    </ul>
